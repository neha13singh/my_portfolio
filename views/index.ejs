<style>
@keyframes wave {
  0% { transform: rotate(0deg); }
  10% { transform: rotate(14deg); }
  20% { transform: rotate(-8deg); }
  30% { transform: rotate(14deg); }
  40% { transform: rotate(-4deg); }
  50% { transform: rotate(10deg); }
  60% { transform: rotate(0deg); }
  100% { transform: rotate(0deg); }
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .container { padding: 1rem; }
  .profile-card { padding: 1.5rem !important; }
  .about-text { font-size: 1rem !important; }
}

/* Custom background animation */
.home-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(120deg, rgba(255, 240, 230, 0.8), rgba(255, 250, 245, 0.9)),
    repeating-linear-gradient(45deg, rgba(255, 69, 0, 0.05) 0px, rgba(255, 69, 0, 0.05) 2px, transparent 2px, transparent 8px);
  z-index: -1;
  animation: gradientMove 15s ease infinite;
}

.home-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 50% 50%, rgba(255, 69, 0, 0.05) 0%, transparent 50%);
  animation: pulseGlow 4s ease-in-out infinite;
}

/* Floating shapes animation */
.floating-shapes {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  overflow: hidden;
}

.shape {
  position: absolute;
  background: linear-gradient(45deg, rgba(255, 69, 0, 0.1), rgba(255, 140, 90, 0.1));
  border-radius: 50%;
  animation: float 15s infinite;
}

@keyframes gradientMove {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes pulseGlow {
  0% { opacity: 0.3; }
  50% { opacity: 0.6; }
  100% { opacity: 0.3; }
}

@keyframes float {
  0% { transform: translate(0, 0) rotate(0deg); }
  25% { transform: translate(10px, 10px) rotate(90deg); }
  50% { transform: translate(0, 20px) rotate(180deg); }
  75% { transform: translate(-10px, 10px) rotate(270deg); }
  100% { transform: translate(0, 0) rotate(360deg); }
}

/* Enhanced card styles */
.profile-card {
  backdrop-filter: blur(10px);
  background: rgba(255, 255, 255, 0.9) !important;
  border: 1px solid rgba(255, 69, 0, 0.2) !important;
  box-shadow: 
    0 10px 30px rgba(255, 69, 0, 0.1),
    inset 0 0 20px rgba(255, 255, 255, 0.5) !important;
}

/* Enhanced text hover effects */
.about-text {
  position: relative;
  z-index: 1;
}

.about-text::before {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255, 69, 0, 0.1), transparent);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
}

.about-text:hover::before {
  transform: scaleX(1);
}

/* Enhanced role badges */
.role-badge {
  position: relative;
  overflow: hidden;
}

.role-badge::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transform: rotate(45deg);
  transition: all 0.3s ease;
}

.role-badge:hover::before {
  animation: shine 1.5s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) rotate(45deg); }
  100% { transform: translateX(100%) rotate(45deg); }
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .shape {
    display: none;
  }
  
  .home-background {
    background: 
      linear-gradient(120deg, rgba(255, 240, 230, 0.9), rgba(255, 250, 245, 0.95)),
      repeating-linear-gradient(45deg, rgba(255, 69, 0, 0.03) 0px, rgba(255, 69, 0, 0.03) 2px, transparent 2px, transparent 8px);
  }
}
</style>
