<% layout('boilerplate') -%>
<div class="container my-5">
    <h2 class="section-title text-center mb-5 fade-in">
        <span class="title-black">Academic</span> Journey
    </h2>
    
    <div class="education-timeline">
        <!-- B.Tech Section -->
        <div class="education-card animate-on-scroll mb-5">
            <div class="card shadow-lg">
                <div class="row g-0 align-items-center">
                    <div class="col-md-8 order-md-1">
                        <div class="card-body p-4">
                            <h3 class="education-title slide-in-left">Bachelor of Technology</h3>
                            <div class="school-info mb-3">
                                <span class="education-badge">Institute Of Engineering And Technology Lucknow</span>
                                <span class="education-badge">ECE</span>
                                <span class="education-badge">2025 Batch</span>
            
                            </div>
                            
                            <div class="achievement-box mt-3">
                                <div class="percentage-wrapper">
                                    <h5 class="mb-3">Academic Performance</h5>
                                    <div class="progress-container">
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar" role="progressbar" style="width: 81.8%;" 
                                                 aria-valuenow="81.8" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <span class="percentage-label">8.18 CGPA</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 order-md-2">
                        <div class="education-image-container">
                            <img src="iet.jpeg" class="img-fluid" alt="IET logo">
                            <div class="education-overlay">
                                <div class="overlay-content">
                                    <span class="year-badge">2022-Present</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Diploma Section -->
        <div class="education-card animate-on-scroll mb-5">
            <div class="card shadow-lg">
                <div class="row g-0 align-items-center">
                    <div class="col-md-8 order-md-1">
                        <div class="card-body p-4">
                            <h3 class="education-title slide-in-left">Diploma in ECE</h3>
                            <div class="school-info mb-3">
                                <span class="education-badge">Government Girls Polytechnic Lucknow</span>
                                <span class="education-badge">BTEUP Board</span>
                                <span class="education-badge">ECE</span>
                            </div>
                            
                            <div class="achievement-box mt-3">
                                <div class="percentage-wrapper">
                                    <h5 class="mb-3">Academic Performance</h5>
                                    <div class="progress-container">
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar" role="progressbar" style="width: 83%;" 
                                                 aria-valuenow="83" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <span class="percentage-label">83%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 order-md-2">
                        <div class="education-image-container">
                            <img src="th.jpeg" class="img-fluid" alt="GGPL Logo">
                            <div class="education-overlay">
                                <div class="overlay-content">
                                    <span class="year-badge">2020-2022</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 12th Grade -->
        <div class="education-card animate-on-scroll mb-5">
            <div class="card shadow-lg">
                <div class="row g-0 align-items-center">
                    <div class="col-md-8 order-md-1">
                        <div class="card-body p-4">
                            <h3 class="education-title slide-in-left">12th Grade</h3>
                            <div class="school-info mb-3">
                                <span class="education-badge">Ramgarhia Girls Senior Secondary School</span>
                                <span class="education-badge">PSEB Board</span>
                                <span class="education-badge">Non-Medical</span>
                            </div>
                            
                            <div class="achievement-box mt-3">
                                <div class="percentage-wrapper">
                                    <h5 class="mb-3">Academic Performance</h5>
                                    <div class="progress-container">
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar" role="progressbar" style="width: 89%;" 
                                                 aria-valuenow="89" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <span class="percentage-label">89%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 order-md-2">
                        <div class="education-image-container">
                            <img src="Punjab-Board.jpg" class="img-fluid" alt="PSEB Logo">
                            <div class="education-overlay">
                                <div class="overlay-content">
                                    <span class="year-badge">2020</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 10th Grade -->
        <div class="education-card animate-on-scroll mb-5">
            <div class="card shadow-lg">
                <div class="row g-0 align-items-center">
                    <div class="col-md-8 order-md-1">
                        <div class="card-body p-4">
                            <h3 class="education-title slide-in-left">10th Grade</h3>
                            <div class="school-info mb-3">
                                <span class="education-badge">Shri Krishna Model High School</span>
                                <span class="education-badge">PSEB Board</span>
                            </div>
                            
                            <div class="achievement-box mt-3">
                                <div class="percentage-wrapper">
                                    <h5 class="mb-3">Academic Performance</h5>
                                    <div class="progress-container">
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar" role="progressbar" style="width: 87%;" 
                                                 aria-valuenow="87" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <span class="percentage-label">87%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 order-md-2">
                        <div class="education-image-container">
                            <img src="Punjab-Board.jpg" class="img-fluid" alt="PSEB Logo">
                            <div class="education-overlay">
                                <div class="overlay-content">
                                    <span class="year-badge">2018</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="next-section-nav">
        <a href="/<%= nextPage %>" class="next-page-btn">
            <%= nextPageTitle %>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>
